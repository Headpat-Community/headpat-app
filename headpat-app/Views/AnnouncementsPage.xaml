<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:HeadpatCommunity.Mobile.HeadpatApp.Models"
             xmlns:viewmodels="clr-namespace:HeadpatCommunity.Mobile.HeadpatApp.ViewModels"
             x:DataType="viewmodels:AnnouncementsViewModel"
             x:Class="HeadpatCommunity.Mobile.HeadpatApp.Views.AnnouncementsPage"
             Title="{Binding Title}">
    <VerticalStackLayout Padding="20">
        <CollectionView ItemsSource="{Binding Announcements}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Announcement">
                    <Frame Margin="0,0,0,20">
                        <VerticalStackLayout>
                            <Label Text="{Binding Title}" />
                            <Label Text="{Binding SideText}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>