<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HeadpatCommunity.HeadpatApp.Views.LoginPage"
             xmlns:models="clr-namespace:HeadpatCommunity.HeadpatApp.Models"
             xmlns:viewmodels="clr-namespace:HeadpatCommunity.HeadpatApp.ViewModels"
             x:DataType="viewmodels:LoginViewModel"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False"
             Title="{Binding Title}">
    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="40">
        <Entry VerticalOptions="Center"
               Placeholder="E-Mail"
               Text="{Binding User.EMail}" />
        <Entry VerticalOptions="Center"
               Placeholder="Passwort"
               Text="{Binding User.Password}"
               IsPassword="True" />
        <Button Text="Anmelden"
                Command="{Binding PerformLoginCommand}"
                Margin="0,20,0,0"/>
    </VerticalStackLayout>
</ContentPage>