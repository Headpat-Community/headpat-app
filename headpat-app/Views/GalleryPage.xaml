<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:HeadpatCommunity.Mobile.HeadpatApp.Models"
             xmlns:viewmodels="clr-namespace:HeadpatCommunity.Mobile.HeadpatApp.ViewModels"
             x:DataType="viewmodels:GalleryViewModel"
             x:Class="HeadpatCommunity.Mobile.HeadpatApp.Views.GalleryPage"
             Title="{Binding Title}">

    <AbsoluteLayout BackgroundColor="Black"
                    Padding="20">
        <FlexLayout AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All">
            <CollectionView ItemsSource="{Binding GalleryItems}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:GalleryItem">
                        <VerticalStackLayout Margin="0,0,0,20">
                            <Frame CornerRadius="15"
                                   BackgroundColor="Transparent"
                                   BorderColor="Transparent"
                                   Padding="0">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="{Binding .}"
                                                          Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:GalleryViewModel}}, Path=GoToDetailsCommand}" />
                                </Frame.GestureRecognizers>
                                <Image Source="{Binding SmallImageUrl}"
                                       IsAnimationPlaying="True"
                                       MaximumHeightRequest="400"
                                       Aspect="AspectFill" />
                            </Frame>
                            <FlexLayout>
                                <Label Text="{Binding Name}"
                                       Padding="0,3,0,0"
                                       FlexLayout.Grow="1"
                                       TextColor="WhiteSmoke" />
                                <Label  
                                       Padding="0,3,0,0"
                                       TextColor="WhiteSmoke">
                                    <Label.Text>
                                        <MultiBinding StringFormat="~{0}">
                                            <Binding Path="User.UserName"></Binding>
                                        </MultiBinding>
                                    </Label.Text>
                                </Label>
                            </FlexLayout>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </FlexLayout>
        <StackLayout IsVisible="{Binding IsBusy}"
                     AbsoluteLayout.LayoutBounds="0,0,1,1"
                     AbsoluteLayout.LayoutFlags="All"
                     BackgroundColor="Black"
                     Opacity="0.3">
            <ActivityIndicator IsVisible="{Binding IsBusy}"
                               IsRunning="{Binding IsBusy}"
                               HorizontalOptions="CenterAndExpand"
                               VerticalOptions="CenterAndExpand" />
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>