<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:HeadpatCommunity.Mobile.HeadpatApp.Models"
             xmlns:viewmodels="clr-namespace:HeadpatCommunity.Mobile.HeadpatApp.ViewModels"
             x:DataType="viewmodels:GalleryViewModel"
             x:Class="HeadpatCommunity.Mobile.HeadpatApp.Views.GalleryPage"
             Title="{Binding Title}">

    <FlexLayout AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All"
                    BackgroundColor="Red">
        <CollectionView ItemsSource="{Binding GalleryItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:GalleryItem">
                    <Image Source="{Binding ImageUrl}"
                               Aspect="AspectFit">
                    </Image>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Test Load"
                    Command="{Binding GetGalleryItemsCommand}"
                    IsEnabled="{Binding IsNotBusy}">
        </Button>
        <ActivityIndicator IsVisible="{Binding IsBusy}"
                               IsRunning="{Binding IsBusy}" 
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="CenterAndExpand">
        </ActivityIndicator>
    </FlexLayout>
</ContentPage>