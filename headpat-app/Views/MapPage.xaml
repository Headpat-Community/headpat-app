<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HeadpatCommunity.Mobile.HeadpatApp.Views.MapPage"   
             xmlns:HeadpatApp="clr-namespace:HeadpatCommunity.Mobile.HeadpatApp"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             xmlns:models="clr-namespace:HeadpatCommunity.Mobile.HeadpatApp.Models"
             xmlns:viewModels="clr-namespace:HeadpatCommunity.Mobile.HeadpatApp.ViewModels"
             x:DataType="viewModels:MapPageViewModel">
    <ScrollView>
        <maps:Map x:Name="headpatMap"
                  ItemsSource="{Binding HeadpatItems}">
            <maps:Map.ItemTemplate>
                <DataTemplate x:DataType="{x:Type models:HeadpatItem}">
                    <HeadpatApp:CustomPin
                        Location="{Binding Location}"
                        Address="{Binding Info}"
                        Label="{Binding Name}"
                        ImageSource="{Binding ImageSource}"
                        Type="Place" />
                </DataTemplate>
            </maps:Map.ItemTemplate>
        </maps:Map>
    </ScrollView>
</ContentPage>