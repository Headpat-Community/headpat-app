<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HeadpatCommunity.HeadpatApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:HeadpatCommunity.HeadpatApp.Views"
    xmlns:local="clr-namespace:HeadpatCommunity.HeadpatApp"
    Shell.FlyoutBehavior="Disabled">
    <TabBar x:Name="Dashboard"
            Route="Dashboard">
        <Tab Title="News"
             Icon="announcements.svg"
             Route="Announcements">
            <ShellContent ContentTemplate="{DataTemplate views:AnnouncementsPage}"/>
        </Tab>
        <Tab Title="Gallerie"
             Icon="gallery.svg"
             Route="Gallery">
            <ShellContent ContentTemplate="{DataTemplate views:GalleryPage}"/>
        </Tab>
        <Tab Title="Map"
             Icon="map.svg"
             Route="Map">
            <ShellContent ContentTemplate="{DataTemplate views:MapPage}"/>
        </Tab>
        <Tab Title="Profil"
             Icon="avatar.svg"
             Route="Profile">
            <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}"/>
        </Tab>
    </TabBar>
</Shell>
