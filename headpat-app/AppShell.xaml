<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HeadpatCommunity.Mobile.HeadpatApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:HeadpatCommunity.Mobile.HeadpatApp.Views"
    x:Name="MainShell"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem x:Name="Login"
                Route="Login">
        <ShellContent ContentTemplate="{DataTemplate views:LoginPage}" />
    </FlyoutItem>
    <TabBar x:Name="Dashboard"
            Route="Dashboard">
        <Tab Title="News"
             Icon="announcements.png">
            <ShellContent ContentTemplate="{DataTemplate views:AnnouncementsPage}"/>
        </Tab>
        <Tab Title="Gallerie"
             Icon="gallery.png">
            <ShellContent ContentTemplate="{DataTemplate views:GalleryPage}"/>
        </Tab>
        <Tab Title="Map"
             Icon="map.png">
            <ShellContent ContentTemplate="{DataTemplate views:MapPage}"/>
        </Tab>
    </TabBar>
</Shell>
